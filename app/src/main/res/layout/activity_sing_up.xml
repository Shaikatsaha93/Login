<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3a65a6"
    tools:context=".activities.Sing_up">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_person_user"
        android:hint="Name"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/edit_round"
        android:inputType="text"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_round"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="160dp"
        android:drawableLeft="@drawable/ic_email_black_email"
        android:hint="email"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_round"
        android:layout_marginTop="220dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:hint="password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_lock_outline_password"/>

    <EditText
        android:id="@+id/confirm_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_round"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="confirm password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_lock_open_black_24dp"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="91dp"
        android:background="@drawable/log_btn_round"
        android:textAllCaps="false"
        android:text="submit"
        android:textSize="25dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"/>

</RelativeLayout>